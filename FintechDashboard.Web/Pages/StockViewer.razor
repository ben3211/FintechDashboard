@page "/stocks"
@page "/"

<h3>📈 Stock Price Viewer</h3>

<div class="form-group">
    <input class="form-control" @bind="Symbol" placeholder="Enter stock symbol (e.g., AAPL)" />
</div>

<button class="btn btn-primary mt-2" @onclick="GetPriceAsync">Get Price</button>

@if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <div class="alert alert-danger mt-3">@ErrorMessage</div>
}
else if (Price.HasValue)
{
    <div class="alert alert-success mt-3">
        The price of <strong>@Symbol.ToUpper()</strong> is <strong>@Price.Value.ToString("C")</strong>
    </div>
}
